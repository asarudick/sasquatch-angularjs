{
  "include": ["./src/**/*.ts", "./bin/**/*.ts"],
  "exclude": ["./test/**/*.*"],
  "compilerOptions": {
    "lib": ["ES2015", "ES2016", "ES2017", "ES2018", "ES2019", "ES2020"],
    "allowSyntheticDefaultImports": true,
    "module": "commonjs",
    "moduleResolution": "node",
    "skipLibCheck": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "target": "esnext",
    "types": ["node"],
    "outDir": "./lib",
    "declaration": true,
    "declarationDir": "./lib/types"
  },
  "ignore": "false"
}
